{% trans_default_domain 'cooolinhoui' %}

{% extends '@CooolinhoUi/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/cooolinhoui/lib/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/cooolinhoui/lib/fontawesome.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/cooolinhoui/css/login.css') }}">
{% endblock %}

{% block head_javascripts %}
    <script src="{{ asset('bundles/cooolinhoui/lib/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/cooolinhoui/lib/jquery.min.js') }}"></script>
{% endblock %}

{% block title %}{{ 'cooolinhoui.login.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">

                <div class="card-header">
                    {% block login_header %}
                        <h3>
                            {% block login_title %}
                                {{ 'cooolinhoui.login.title'|trans }}
                            {% endblock %}
                        </h3>
                        <div class="d-flex justify-content-end social_icon">
                            <a href="https://github.com/cooolino" target="_blank">
                                <span><i class="fab fa-github-square"></i></span>
                            </a>
                        </div>
                    {% endblock %}
                </div>

                <div class="card-body">
                    {% block login_body %}

                        {% block login_body_top %}
                            {% if error != '' %}
                                <div class="alert alert-danger" role="alert">{{ error }}</div>
                            {% endif %}
                        {% endblock %}

                        {{ form_start(form) }}

                        {% block login_form_email_outer %}
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>

                                {% block login_form_email %}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'E-Mail', 'name': 'email'}}) }}
                                {% endblock %}
                            </div>
                        {% endblock %}

                        {% block login_form_password_outer %}
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>

                                {% block login_form_password %}
                                    {{ form_widget(form.password, {
                                        'attr': {'class': 'form-control', 'placeholder': 'Password', 'name': 'password'},
                                    }) }}
                                {% endblock %}
                            </div>
                        {% endblock %}

                        {% block login_form_password_after %}{% endblock %}

                        {% block login_form_remember_me_outer %}
                            <div class="row align-items-center remember">
                                {% block login_form_remember_me %}
                                    {{ form_widget(form._remember_me, {
                                        'label': 'cooolinhoui.login.remember'|trans
                                    }) }}
                                {% endblock %}
                            </div>
                        {% endblock %}

                        <div class="form-group">
                            {{ form_widget(form.submit, {
                                'attr': {'class': 'btn float-right login_btn'},
                                'label': 'cooolinhoui.login.submit'|trans
                            }) }}
                        </div>
                        {{ form_end(form) }}
                    {% endblock %}
                </div>

                {% block login_footer %}
                    <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                {{ 'cooolinhoui.login.signup'|trans({'%url%': path('app_register')})|raw }}
                            </div>
                            <div class="d-flex justify-content-center">
                                {{ 'cooolinhoui.login.forgot_password'|trans({'%url%': path('app_forgot_password_request')})|raw }}
                            </div>
                            <div class="d-flex justify-content-center">
                                <p class="mt-5 mb-3 text-muted">Â© {{ 'now'|date('Y') }}</p>
                            </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
